#include<bits/stdc++.h>
using namespace std;

int main(){
    string s;
    cin>>s;
    string s1="";
    string s2="";
    string s3="";
    int count=0;
    for(int i=0;i<s.size();i++){
        if(s[i]=='1'){
            s1=s1+"1+";
        }else if(s[i]=='2'){
                s2=s2+"2+";
        }else if(s[i]=='3'){
                s3=s3+"3+";
        }
    }
    string res=s1+s2+s3;
    res.pop_back();
    cout<<res;
    
}
